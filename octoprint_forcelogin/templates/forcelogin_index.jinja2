<html>
<head>
    <title>OctoPrint login</title>

    <link rel="stylesheet" href="{{ url_for("static", filename="css/bootstrap.min.css") }}">
    <link rel="stylesheet" href="{{ url_for("static", filename="css/bootstrap-responsive.min.css") }}">
    <link rel="stylesheet" href="{{ url_for("static", filename="css/font-awesome.min.css") }}">
    <link rel="stylesheet" href="{{ url_for("plugin.forcelogin.static", filename="css/forcelogin.css") }}">

    <script>
        var UI_API_KEY = "{{ uiApiKey }}";
        var BASE_URL = "{{ url_for('index') }}";
    </script>
    <script src="{{ url_for("static", filename="js/lib/jquery/jquery-2.1.4.min.js") }}"></script>
    <script src="{{ url_for("static", filename="js/lib/bootstrap/bootstrap.js") }}"></script>
    <script src="{{ url_for("static", filename="js/lib/lodash.min.js") }}"></script>

    {% assets "js_client" %}
        <script type="text/javascript" src="{{ ASSET_URL }}"></script>
    {% endassets %}

    <script src="{{ url_for("plugin.forcelogin.static", filename="js/main.js") }}"></script>
</head>
<body>
    <div class="container">
        <form class="form-signin">
            <h2 class="form-signin-heading">{{ _('Please log in') }}</h2>

            <div id="login-error" class="alert alert-error">{{ _('Incorrect username or password.') }}</div>

            <input type="text" id="login-user" class="input-block-level" placeholder="{{ _('Username') }}">
            <input type="password" id="login-password" class="input-block-level" placeholder="{{ _('Password') }}">
            <label class="checkbox">
                <input type="checkbox" id="login-remember"> {{ _('Remember me') }}
            </label>
            <button class="btn btn-block btn-large btn-primary" id="login-button" type="submit">{{ _('Log in') }}</button>
        </form>
    </div>

    <div id="login-overlay">
        <div class="background"></div>
        <div class="wrapper">
            <div class="outer">
                <div class="inner">
                    <div class="content">
                        <i class="icon-spinner icon-spin icon-4x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
